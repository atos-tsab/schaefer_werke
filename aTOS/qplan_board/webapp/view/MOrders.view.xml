<mvc:View
    controllerName="zatos.maintmangr.controller.MOrders"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns:f="sap.f"
    xmlns="sap.m">

    <Shell id="shell">
        <App id="app">
            <pages>

                <f:DynamicPage id="idDynamicPage_MORDERS" backgroundDesign="Standard" headerExpanded="true" showFooter="true">
                    <!-- DynamicPage Title -->
                    <f:title>
                        <f:DynamicPageTitle>
                            <f:heading>
                                <Button press="onNavBack" text="" type="Up" tooltip="{i18n>Back}" class="sapUiTinyMarginBegin" />
                            </f:heading>
                            <f:expandedContent>
                                <Title text="{i18n>Filtering} - {i18n>MaintOrders}" titleStyle="H5" />
                            </f:expandedContent>
                            <f:snappedContent>
                                <Title text="{i18n>Filtering} - {i18n>MaintOrders}" titleStyle="H5" />
                            </f:snappedContent>
                            <f:actions>
                                <ToolbarSeparator />
                                <Button id="idButtonMOrdersDetails" press="onMOrdersDetails" text="" 
                                        tooltip="{i18n>ToolTipMOrdersDetails}" type="Ghost" icon="sap-icon://dimension" class="" />
                                <ToolbarSeparator />
                                <Button id="idButtonStatusChange" press="onStatusChange" text="" 
                                        tooltip="{i18n>ToolTipStatusChange}" type="Emphasized" icon="sap-icon://enter-more" class="" />
                                <ToolbarSeparator />
                                <Button id="idButtonMOrdersHistorie" press="onvHistory" text="" 
                                        tooltip="{i18n>ToolTipMOrdersHistorie}" type="Emphasized" icon="sap-icon://history" class="" />
                                <ToolbarSeparator />
                                <Button id="idButtonToggleFooter_MORDERS" press="onToggleMOrdersFooter" text="{i18n>ToggleFooterOff}" 
                                        tooltip="{i18n>ToolTipToggleFooter}" type="Transparent" icon="sap-icon://busy" />
                            </f:actions>
                        </f:DynamicPageTitle>
                    </f:title>

                    <!-- DynamicPage Header -->
                    <f:header>
                        <f:DynamicPageHeader pinnable="true">
                            <core:Fragment fragmentName="zatos.maintmangr.view.search.MOrdersFilterBar"  type="XML" />
                        </f:DynamicPageHeader>
                    </f:header>

                    <!-- DynamicPage Content -->
                    <f:content>
                        <VBox fitContainer="true" height="100%">
                            <Panel id="idPanelTableM_MORDERS" expandable="false" expanded="true" class="sapUiNoContentPadding" visible="true">
                                <content>				
                                    <core:Fragment fragmentName="zatos.maintmangr.view.search.MOrdersSmartTableM" type="XML" />
                                </content>
                            </Panel>

                            <Panel id="idPanelTableUI_MORDERS" expandable="false" expanded="true" class="sapUiNoContentPadding" visible="false">
                                <content>				
                                    <core:Fragment fragmentName="zatos.maintmangr.view.search.MOrdersSmartTableUI" type="XML" />
                                </content>
                            </Panel>
                        </VBox>
                    </f:content>

                    <!-- DynamicPage Footer -->
                    <f:footer>
                        <OverflowToolbar>
                            <Button id="idButtonBarCodeScan" text="{i18n>BarcodeScan}" tooltip="{i18n>ToolTipBarcodeScan}" icon="sap-icon://bar-code"
                                    press="onScan" type="Emphasized" width="auto" visible="false" class="sapUiTinyMarginBegin" />
                            <ToolbarSpacer />
                            <Button press="onNavBack" text="{i18n>Back}" type="Back" tooltip="{i18n>Back}" visible="true" />
                       </OverflowToolbar>
                    </f:footer>
                </f:DynamicPage>

            </pages>
        </App>
    </Shell>
    
</mvc:View>
