<core:FragmentDefinition
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core" 
	class="sapUiSizeCompact"
	xmlns="sap.m">
	
	<Dialog 
		id="idChangeSceneStatusDialog" 
		class="sapThemeHighlight-asColor"
		contentHeight="250px"
		contentWidth="360px"
		resizable="true"
		type="Standard"
		state="None"
		afterClose="onDialogStatusChangeAfterClose"
		title="{i18n>ChangeSceneStatus}">
		<content>
			<HBox wrap="Wrap" width="auto" height="auto">
				<VBox class="sapUiMediumMarginBegin sapUiSmallMarginTop sapUiMediumMarginEnd">
					<HBox>
						<Label text="{i18n>SceneNumberColon}" width="130px" class="sapUiTinyMarginTop" />
						<TextArea id="idTextAreaSceneNumber" value="" width="160px" growing="false" rows="1" enabled="false" class="atosMInputBaseDisabled" />
					</HBox>
					<HBox>
						<Label text="{i18n>ActualStatusColon}" width="130px" class="sapUiTinyMarginTop" />
						<TextArea id="idTextAreaActiveStatus" value="" width="160px" growing="false" rows="1" enabled="false" class="atosMInputBaseDisabled" />
					</HBox>
				</VBox>
				
				<VBox class="sapUiMediumMarginBegin sapUiMediumMarginTop sapUiMediumMarginEnd">
					<HBox>
						<Label text="{i18n>ChangeStatusColon}" width="130px" class="sapUiTinyMarginTop" />
						<ComboBox 
							id="idDialogStatusChange" 
							filterSecondaryValues="false"
							showSecondaryValues="false"
							width="160px"
							change="onSelectSceneStatus">
						</ComboBox>
					</HBox>
					<HBox>
					</HBox>
				</VBox>
			</HBox>
		</content>
		
		<beginButton>
			<Button id="idButtonChangeStatus" text="{i18n>Change}" type="Accept" press="onChangeSceneStatus" enabled="false" icon="sap-icon://enter-more" iconFirst="true" />
		</beginButton>
		<endButton>
			<Button text="{i18n>Cancel}" type="Default" press="onChangeStatusClose" icon="sap-icon://decline" iconFirst="true" />
		</endButton>
		
	</Dialog>
</core:FragmentDefinition>