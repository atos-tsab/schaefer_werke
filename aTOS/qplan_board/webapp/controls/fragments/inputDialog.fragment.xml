<core:FragmentDefinition
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Dialog id="idDialogScanInput" title="{ parts: ['i18n>TitleInputDialog', 'scanModel>/type'], formatter: 'jQuery.sap.formatMessage'}"
            showHeader="true" contentWidth="auto" contentHeight="auto" class="sapUiContentPadding">
        <content>
            <VBox>
                <HBox>
                    <Label text="{i18n>SceneNumberColon}" width="140px" class="sapUiTinyMarginTop" />
					<ComboBox
        				id="idComboSceneNumberF4" 
						showSecondaryValues="false"
                        placeholder="{i18n>PlaceHolderSceneNumber}" 
                        class="sapUiSmallMarginEnd"
                        change="onComboBoxSceneNumberChanged"
                        width="280px"
						items="{
							path: '/EvidenceScene',
							sorter: { path: 'SceneNumber' },
							templateShareable: false
						}">
						<core:ListItem key="{SceneNumber}" text="{SceneNumber}" />
					</ComboBox>
                </HBox>
                <HBox>
                    <Label text="{i18n>EvidenceNumberColon}" width="140px" class="sapUiTinyMarginTop" />
                    <ComboBox 
                        id="idComboEvidNumberF4" 
                        filterSecondaryValues="false"
                        showSecondaryValues="false"
                        placeholder="{i18n>PlaceHolderEvidenceNumber}" 
                        class="sapUiSmallMarginEnd"
                        width="280px"
                        change="onComboBoxEvidNumberChanged">
                    </ComboBox>
                </HBox>
                <HBox>
                    <Label text="" width="140px" class="sapUiTinyMarginTop" />
                    <Text text="{i18n>HintVideoInputDialog}" width="auto" class="customInputInfo" />
                 </HBox>
            </VBox>
        </content>

        <beginButton>
            <Button press="onOkPress"     text="{i18n>Ok}"     icon="sap-icon://accept" enabled="{scanModel>/okButton}" />
        </beginButton>
        <endButton>
            <Button press="onCancelPress" text="{i18n>Cancel}" icon="sap-icon://decline" />
        </endButton>
    </Dialog>

</core:FragmentDefinition>