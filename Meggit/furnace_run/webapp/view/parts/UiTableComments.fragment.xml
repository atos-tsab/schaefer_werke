<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified" 
	xmlns:l="sap.ui.layout" 
	xmlns:ui="sap.ui.table" 
    displayBlock="true"
	xmlns:ndc="sap.ndc" 
    xmlns="sap.m"
    height="100%">

	<ScrollContainer width="100%" horizontal="false" vertical="true">
		<ui:Table 
			id="idTableCommentList" 
			title="" 
			class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginBottom" 
			selectionMode="None" 
			selectionBehavior="Row" 
			visibleRowCount="6">
			<ui:columns>
				<ui:Column width="25%" id="multiheader" sortProperty="Layer">
					<ui:multiLabels>
						<Label text="{i18n>CommentType}" textAlign="Center" width="100%" />
					</ui:multiLabels>
					<ui:template>
						<Text text="{COMMENT_TYPE}" />
					</ui:template>
				</ui:Column>
				<ui:Column width="40%" sortProperty="Position">
					<ui:multiLabels>
						<Label text="{i18n>Comment}" textAlign="Center" width="100%" />
					</ui:multiLabels>
					<ui:template>
						<Text text="{COMMENTS}" />
					</ui:template>
				</ui:Column>
				<ui:Column width="13%" sortProperty="Module">
					<ui:multiLabels>
						<Label text="{i18n>UserId}" textAlign="Center" width="100%" />
					</ui:multiLabels>
					<ui:template>
						<Text text="{USER_ID}" />
					</ui:template>
				</ui:Column>
				<ui:Column width="22%" sortProperty="LoadedModuleID">
					<ui:multiLabels>
						<Label text="{i18n>CommentDateTime}" textAlign="Center" width="100%" />
					</ui:multiLabels>
					<ui:template>
						<Text text="{CREATED_DATE_TIME}" />
					</ui:template>
				</ui:Column>
			</ui:columns>
		</ui:Table>
	</ScrollContainer>

</core:FragmentDefinition>