<core:FragmentDefinition
	xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified" 
	xmlns:l="sap.ui.layout" 
    displayBlock="true"
    xmlns="sap.m">

    <Title id="Title" text="{i18n>PodSelection}" class="sapUiSmallMarginBegin sapUiTinyMarginTop" />

	<Panel accessibleRole="Form">
		<content>
			<VBox class="sapUiSmallMargin">
				<f:Form id="FormChange354wideDual" editable="true">
					<f:layout>
						<f:ResponsiveGridLayout
							labelSpanXL="6"
							labelSpanL="3"
							labelSpanM="4"
							labelSpanS="12"
							adjustLabelSpan="true"
							emptySpanXL="0"
							emptySpanL="4"
							emptySpanM="0"
							emptySpanS="0"
							columnsXL="3"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false">
						</f:ResponsiveGridLayout>
					</f:layout>

					<f:formContainers>
						<f:FormContainer title="Selection">
							<f:formElements>
								<f:FormElement label="{i18n>Resource}">
									<f:fields>
										<Input value="R_CVI_1E" placeholder="{i18n>ResourcePlaceholder}" width="200px"				
											   showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelpResrc" class="sapUiSmallMarginBegin" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>FurnaceRunId}">
									<f:fields>
										<Input width="200px" id="FurnRunIdInput3" type="Text" value="" placeholder="{i18n>FurnaceRunIdPlaceholder}" 
											showValueHelp="true" valueHelpOnly="true" valueHelpRequest="handleValueHelpFurn" class="sapUiSmallMarginBegin" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>Layer}">
									<f:fields>
										<ComboBox 
											class="sapUiSmallMarginBegin sapUiSmallMarginBottom" 
											id="LayerInput3" 
											width="200px"
											selectionChange="handleSelectionChangeLayer">
										</ComboBox>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>

						<f:FormContainer title="Status">
							<f:formElements>
								<f:FormElement label="{i18n>FurnaceStatus}">
									<f:fields>
										<Input value="Semi-Productive Time" width="200px" class="sapUiSmallMarginBegin" />
										<Button id="idButtonChange" press="onPressChange" text="{i18n>Change}" type="Reject" width="70px" class="sapUiTinyMarginBegin" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>StartDateTime}">
									<f:fields>
										<Input value="08.12.22 10:00" width="120px" class="sapUiSmallMarginBegin" />
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>

						<f:FormContainer title="Runtime">
							<f:formElements>
								<f:FormElement label="{i18n>RunTime}">
									<f:fields>
										<Input value="01:12" width="60px" class="sapUiSmallMarginBegin" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="{i18n>TimeRemaining}">
									<f:fields>
										<Input value="03:48" width="60px" class="sapUiSmallMarginBegin" />
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>


