<mvc:View
    controllerName="furnacerun.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m">

    <Shell id="shell" appWidthLimited="false">
        <App id="app">
            <pages>
	            <Page id="page" title="{i18n>title}" showNavButton="false" navButtonPress="onNavBack" navButtonTooltip="{i18n>Back}">
                    <customHeader>
                        <Bar>
                            <contentMiddle><Title text="{i18n>title}" titleStyle="H5"></Title></contentMiddle>
                            <contentRight>
                                <Button text="" type="Ghost" icon="sap-icon://decline" iconFirst="true" press="onNavBack" visible="true" class="sapUiSmallMarginEnd" />
                            </contentRight>		
                        </Bar>
                    </customHeader>

                    <content>
                        <core:Fragment fragmentName="furnacerun.view.parts.FilterArea"    type="XML" />
<!--                         <core:Fragment fragmentName="furnacerun.view.parts.SelectionArea" type="XML" />
 -->                        <core:Fragment fragmentName="furnacerun.view.parts.SplitArea"     type="XML" />
                    </content>

                    <footer>
                        <Bar>
                            <contentRight>
                                <Button press="onNavBack" text="{i18n>Back}" type="Back" visible="false" />
                            </contentRight>
                        </Bar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>