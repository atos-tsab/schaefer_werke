<mvc:View
    controllerName="processlot.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    height="100%">

    <Shell id="shell">
        <App id="app">
            <pages>
	            <Page id="page" title="{i18n>title}" showNavButton="false" navButtonPress="onNavBack" navButtonTooltip="{i18n>Back}">
                    <customHeader>
                        <Bar>
                            <contentMiddle><Title text="{i18n>title}" titleStyle="H5"></Title></contentMiddle>
                            <contentRight>
                                <Button text="" type="Ghost" icon="sap-icon://decline" iconFirst="true" press="onNavBack" visible="true" />
                            </contentRight>		
                        </Bar>
                    </customHeader>

                    <content>
                        <core:Fragment fragmentName="processlot.view.fragments.ListInput" type="XML" />
                    </content>

                    <footer>
                        <Bar>
                            <contentLeft>
                            </contentLeft>
                            <contentRight>
                                <Button id="idButtonCompleteAll" press="onCompleteAll" text="{i18n>CompleteAll}" tooltip="{i18n>CompleteAllToolTip}"
                                        type="Emphasized" enabled="false" visible="true" />
                                <Button press="onNavBack" text="{i18n>Back}" type="Back" visible="false" />
                            </contentRight>
                        </Bar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>
