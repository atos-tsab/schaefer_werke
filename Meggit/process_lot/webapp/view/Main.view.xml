<mvc:View
    controllerName="processlot.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    displayBlock="true"
    xmlns:f="sap.f"
    xmlns="sap.m">

    <Shell id="shell" appWidthLimited="false" class="sapUiSizeCozy">
        <App id="app">
            <tnt:ToolPage id="idToolPage">
                <tnt:header>
                    <f:ShellBar title="{i18n>title}" secondTitle="{i18n>SiteColon}" homeIcon="../images/Logo.jpg" showSearch="false" showCopilot="false" 
                                showMenuButton="false" showNavButton="false" showNotifications="false" showProductSwitcher="false">
                        <f:profile>
                            <f:Avatar press="onPressAvatar" initials="{headingModel>/User}" />
                        </f:profile>
                        <f:additionalContent>
                            <OverflowToolbarButton press="onNavBack" type="Transparent" text="" tooltip="{i18n>NavBackToolTip}" icon="sap-icon://decline" iconFirst="true" visible="true" />
                        </f:additionalContent>
                    </f:ShellBar>
                </tnt:header>
                <tnt:mainContents>
                    <core:Fragment fragmentName="processlot.view.parts.FilterArea" type="XML" />
                    <core:Fragment fragmentName="processlot.view.parts.SplitArea" type="XML" />
                </tnt:mainContents>
            </tnt:ToolPage>
        </App>
    </Shell>

</mvc:View>
